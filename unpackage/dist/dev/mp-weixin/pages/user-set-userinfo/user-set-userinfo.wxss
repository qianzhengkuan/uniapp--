/* 公共按钮 */
.user-set-btn{
	width: 100%;
	margin: 20rpx 0;
	background: #FD597C!important;
	border: 0!important;
	color: #FFFFFF!important;
	border-radius: 50rpx;
}
.user-set-btn-disable{
	background: #FFB2A3!important;
	border-color: #FFB2A3!important;
	border-width: 0rpx!important;
}
.body{
	padding: 0 20rpx!important;
}
.common-input{
	font-size: 30rpx;
	border-bottom: 1rpx solid #F4F4F4;
	padding-top: 25rpx;
	padding-bottom:25rpx;
}
.user-set-userinfo-list{
	padding: 20rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.user-set-userinfo-list>view:first-child{
	font-size: 32rpx;
	font-weight: bold;
	color: #9B9B9B;
}
.user-set-userinfo-list>view:last-child>image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 100%;
}
.user-set-userinfo-list>view:last-child>input{
	text-align: right;
}
.user-set-userinfo-list>view:last-child>view:last-of-type{
	margin-left: 20rpx;
	color: #9B9B9B;
}

